{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "group": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Face.Presentation.App/Face.Presentation.App.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build:publish",
            "group": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "-r",
                "linux-arm",
                "--self-contained",
                "false",
                "/p:ShowLinkerSizeComparison=true",
                "${workspaceFolder}/Face.Presentation.App/Face.Presentation.App.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "type": "process",
            "command": "pscp",
            "args": [
                "-i",
                "${env:USERPROFILE}\\.ssh\\id_rsa.ppk",
                "-v",
                "-r",
                ".\\*",
                "pi@raspi4:/home/pi/app"
            ],
            "dependsOn": "build:publish",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}/Face.Presentation.App/bin/Debug/netcoreapp2.2/linux-arm/publish"
            },
            "problemMatcher": []
        },
        {
            "label": "shutdown",
            "type": "process",
            "command": "plink",
            "args": [
                "-i",
                "${env:USERPROFILE}\\.ssh\\id_rsa.ppk",
                "pi@raspi4",
                "'shutdown -h now'"
            ],
            "problemMatcher": []
        }
    ]
}